<%- include("partials/header.ejs") %>

   <div class="container mt-5">
      <h1 class="mb-2 bg-light text-center display-4 text-primary font-weight-bolder p-3 rounded">Wellness Watchers</h1>
        <h1 class="mb-4 font-weight-bold text-center">Sign Up</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body">
                        <form method="post" action="/user/create">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email:</label>
                                <input name='email' type='email' class="form-control" placeholder="email" required>
                            </div>
                            <div class="mb-3">
                                <label for="username" class="form-label">Username:</label>
                                <input name='username' type='text' class="form-control" placeholder="username" required>
                            </div>
                
                            <div class="mb-3">
                                <label for="password" class="form-label">Password:</label>
                                <input name='password' type='password' class="form-control" placeholder="password" required>
                            </div>
                            <div class="mb-3">
                                <label for="rePassword" class="form-label">Verify Password:</label>
                                <input name='rePassword' type='password' class="form-control" placeholder="password" required>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Sign Up</button>
                        </form>
                        <% if (typeof message != "undefined") { %>
                            <div class="alert alert-danger mt-3 text-center">
                                <%= message %>
                            </div>
                        <% } %>
                        <div class="text-center mt-3">
                            <form method="get" action="/user/login">
                                <button type="submit" class="btn btn-link">Already have an account? Log in below!</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

   </body>
   </html>
<%- include("partials/header.ejs") %>

    <div class="container mt-5">
        <h1 class="mb-2 bg-light text-center display-4 text-primary font-weight-bolder p-3 rounded">Wellness Watchers</h1>

        <h2 class="mb-4 font-weight-bold text-center">Login</h2>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body">
                        <form id="loginForm" method="post" action="/user/verify">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email:</label>
                                <input id="email" name='email' type='email' class="form-control" placeholder="email@example.com" required>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password:</label>
                                <input id="password" name='password' type='password' class="form-control" placeholder="password" required>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Login</button>
                        </form>
                        <% if (typeof message != "undefined") { %>
                            <div class="alert alert-danger mt-3 text-center">
                                <%= message %>
                            </div>
                        <% } %>
                        <div class="text-center mt-3">
                            <form method="get" action="/user/signup">
                                <button type="submit" class="btn btn-link">No account? Sign Up</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/login.js"></script>
    
    </body>
    </html>